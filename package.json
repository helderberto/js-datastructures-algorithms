{
  "name": "js-algorithms",
  "version": "1.0.0",
  "description": "📝 Algorithms and data structures implemented in JavaScript",
  "main": "index.js",
  "scripts": {
    "dev": "babel-node",
    "lint": "eslint src --max-warnings=0",
    "format": "yarn lint --fix",
    "test": "jest",
    "test:ci": "yarn test --coverage",
    "test:watch": "yarn test --watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helderburato/js-algorithms.git"
  },
  "keywords": [
    "data-structures",
    "algorithms",
    "javascript-algorithms",
    "javascript-data-structures",
    "datastructures"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/helderburato/js-algorithms/issues"
  },
  "homepage": "https://github.com/helderburato/js-algorithms#readme",
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1"
  }
}
